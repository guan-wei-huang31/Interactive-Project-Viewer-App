<!doctype html>
<html lang="en-CA">
  <head>
    <meta charset="UTF-8" />
    <title>Climate Solutions</title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body class="flex flex-col min-h-screen bg-gray-800">
    <!--flex flex col: flexbox, bg-gray-100: background color gray-->
    
    <!-- include partials .ejs file (need pass parameter) -->
    <%- include('partials/navbar', {page: ''}) %>

    <main class="flex-grow">
      <div class="container mx-auto px-4">
        <!--daisyUI Hero-->
        <div
          class="hero bg-base-100 min-h-[30vh] flex items-center justify-center rounded-xl"
        >
          <div class="hero-content text-center">
            <div class="max-w-md">
              <h1 class="text-5xl font-bold">Edit Project</h1>
              <p class="py-6"><%= project.title %></p>
            </div>
          </div>
        </div>
        <form>
            <!--Grid-->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 p-4 bg-base">
          
              <!--Title form-->
              <div>
                <label for="title" class="block font-medium mb-2">Title</label>
                <input type="text" id="title" name="title" value="<%= project.title %>" required class="w-full rounded-md px-3 py-2">
              </div>

              <!--feature_img_url form-->
              <div>
                <label for="feature_img_url" class="block font-medium mb-2">Feature Image (URL)</label>
                <input type="url" id="feature_img_url" value="<%= project.feature_img_url %>" name="feature_img_url" required class="w-full rounded-md px-3 py-2">
              </div>

              <!--sector_id form-->
              <div>
                <label for="sector_id" class="block font-medium mb-2">Sector</label>
                <select id="sector_id" name="sector_id" required class="w-full rounded-md px-3 py-2">
                    <% sectors.forEach(sector=>{ %>
                        <option <%= (project.sector_id == sector.id) ? "selected" : "" %> value="<%= sector.id %>">
                        <%= sector.sector_name %>
                        </option>
                    <% }) %>       
                </select>
              </div>

              <!--intro_short form-->
              <div>
                <label for="intro_short" class="block font-medium mb-2">Intro</label>
                <textarea id="intro_short" name="intro_short" required class="w-full rounded-md px-3 py-2 h-40"><%= project.intro_short %></textarea>
              </div>

              <!--summary_short form-->
              <div>
                <label for="summary_short" class="block font-medium mb-2">Short Summary</label>
                <textarea id="summary_short" name="summary_short" required class="w-full rounded-md px-3 py-2 h-40"><%= project.summary_short %></textarea>
              </div>

              <!--impact form-->
              <div>
                <label for="impact" class="block font-medium mb-2">Impact</label>
                <textarea id="impact" name="impact" required class="w-full rounded-md px-3 py-2 h-40"><%= project.impact %></textarea>
              </div>

              <!--original_source_url form-->
              <div>
                <label for="original_source_url" class="block font-medium mb-2">Original Source (URL)</label>
                <input type="url" id="original_source_url" name="original_source_url" value="<%= project.original_source_url %>" required class="w-full rounded-md px-3 py-2">
              </div>
            </div>
            <div class="mb- 6 mt-6 flex justify-end space-x-2">
                <button type="submit" class="btn btn-sm btn-primary px-6 py-2">Update Project</button>  
                <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-sm btn-error px-6 py-2">Delete Project</a>
                <!-- Hidden input for project ID -->
                <input type="hidden" name="id" value="<%= project.id %>">
            </div>
        </form>
      </div>
    </main>

    <footer class="footer footer-center bg-base-300 text-base-content p-4">
      <aside>
        <p>Copyright Â© 2025 - All right reserved by Guan-Wei Hunag</p>
      </aside>
    </footer>
  </body>
</html>
